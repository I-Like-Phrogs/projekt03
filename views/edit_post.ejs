<%- include("head.partial.ejs") %>
    <main>
        <a href="/forum">powrót</a>
        <h1><%= title %></h1>
        <form action="/edit/<%= post.id %>" method="POST">
            <div class="input-group">
                <label for="title">Tytuł:</label>
                <input type="text" id="title" name="title" value="<%= post.title %>" required>
            </div>
            <div class="input-group">
                <label for="text">Tekst:</label>
                <textarea id="text" name="text" rows="8" required><%= post.text %></textarea>
            </div>
            <div class="input-group">
                <label for="edit_key">Hasło edycji: (defaultowo "edit")</label>
                <input type="password" id="edit_key" name="edit_key" required>
            </div>
            <button type="submit">Zapisz zmiany</button>
        </form>
    </main>
<%- include("foot.partial.ejs") %>
